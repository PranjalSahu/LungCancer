<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mariannelinhares.mnistandroid.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:scaleType="fitStart"
            android:src="@android:color/holo_blue_dark"
            android:layout_marginBottom="10dp"/>

        <TextView android:id="@+id/simpleTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Z position"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:max="120"
            android:progress="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.60"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Predict Malignancy"/>

            <TextView android:id="@+id/simpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_weight="0.40"
                android:gravity="center"
                android:text="Probability" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView android:id="@+id/simpleTextView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:text="Axial"/>

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_below="@+id/simpleTextView21"
                    android:src="@android:color/holo_purple"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView android:id="@+id/simpleTextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:text="Coronal"/>


                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_below="@+id/simpleTextView11"
                    android:src="@android:color/holo_purple"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView android:id="@+id/simpleTextView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:text="Saggatial"/>

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_below="@+id/simpleTextView14"
                    android:src="@android:color/holo_purple"/>


            </RelativeLayout>
        </LinearLayout>


        <TextView android:id="@+id/simpleTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Selected Section"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="420dp"
            android:layout_height="420dp"
            android:layout_gravity="center"
            android:scaleType="fitStart"
            android:padding="15dp"
            android:src="@android:color/holo_purple"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

</LinearLayout>
